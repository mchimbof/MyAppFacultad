<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

        <ImageView
            android:id="@+id/logoFacultad"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/edirectorado"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/infoFacultad"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoFacultad"
            android:layout_centerHorizontal="true"
            android:hint="Edificio de la Facultad..." />
        <TextView
            android:id="@+id/infoCoordenada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/infoFacultad"
            android:layout_centerHorizontal="true"
            android:textAlignment ="textStart"
            android:hint="Coordenada" />
        <TextView
            android:id="@+id/infoVision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@id/infoCoordenada"
            android:layout_centerHorizontal="true"
            android:textAlignment ="textStart"
            android:hint="Vidion..." />
        <TextView
            android:id="@+id/infoMision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@id/infoVision"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart"
            android:hint="Mision..." />

        <TextView
            android:id="@+id/infoCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoMision"
            android:hint="Mail de contacto"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="16dp" />


</RelativeLayout>